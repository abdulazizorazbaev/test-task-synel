@using CSVReader.Entities;
@model List<Employee>

<h2>Upload File</h2>
@using (Html.BeginForm("Create", "Home", null, FormMethod.Post, true, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="form-group d-flex mb-4">
        <div class="w-50">
            <input class="form-control" type="file" name="upload" required />
        </div>
        <div style="margin-left: 10px">
            <input type="submit" value="Import" class="btn btn-outline-primary" />
        </div>
    </div>
}

<div>
    @{
        if (Model != null)
        {
            //Search and Sort Area
            <div class="d-flex justify-content-between mb-2">
                <form class="w-50 d-flex" asp-action="search" asp-controller="home" method="get">
                    <div class="w-75">
                        <input class="form-control" name="search" type="text" placeholder="Search by surname ... " required>
                    </div>
                    <div style="margin-left: 10px">
                        <input type="submit" class="btn btn-primary" value="Search">
                    </div>
                </form>
                <div>
                    <a type="button" class="btn btn-success" asp-area="" asp-action="sort" asp-controller="home">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-sort-down" viewBox="0 0 16 16">
                            <path d="M3.5 2.5a.5.5 0 0 0-1 0v8.793l-1.146-1.147a.5.5 0 0 0-.708.708l2 1.999.007.007a.497.497 0 0 0 .7-.006l2-2a.5.5 0 0 0-.707-.708L3.5 11.293V2.5zm3.5 1a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zM7.5 6a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zm0 3a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1h-3zm0 3a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1h-1z" />
                        </svg>
                        Sort
                    </a>
                </div>
            </div>

            // Table of Contents
            <table class="table table-bordered" style="max-height: 400px; overflow-y: scroll; display: inline-block">
                <thead>
                    <tr>
                        <th style="font-size: 15px;" scope="col">#</th>
                        <th style="font-size: 15px;" scope="col">Payroll Number</th>
                        <th style="font-size: 15px;" scope="col">Forename</th>
                        <th style="font-size: 15px;" scope="col">Surname</th>
                        <th style="font-size: 15px;" scope="col">Date of Birth</th>
                        <th style="font-size: 15px;" scope="col">Telephone</th>
                        <th style="font-size: 15px;" scope="col">Mobile</th>
                        <th style="font-size: 15px;" scope="col">Address</th>
                        <th style="font-size: 15px;" scope="col">Address 2</th>
                        <th style="font-size: 15px;" scope="col">Postcode</th>
                        <th style="font-size: 15px;" scope="col">Email</th>
                        <th style="font-size: 15px;" scope="col">Start date</th>
                        <th style="font-size: 15px;" scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var employee in Model)
                        {
                            <tr>
                                <th style="font-size: 12px;" scope="row">@employee.Id</th>
                                <td style="font-size: 12px;">@employee.PayrollNumber</td>
                                <td style="font-size: 12px;">@employee.Forename</td>
                                <td style="font-size: 12px;">@employee.Surname</td>
                                <td style="font-size: 12px;">@employee.DateOfBirth</td>
                                <td style="font-size: 12px;">@employee.Telephone</td>
                                <td style="font-size: 12px;">@employee.Mobile</td>
                                <td style="font-size: 12px;">@employee.Address</td>
                                <td style="font-size: 12px;">@employee.Address2</td>
                                <td style="font-size: 12px;">@employee.Postcode</td>
                                <td style="font-size: 12px;">@employee.Email</td>
                                <td style="font-size: 12px;">@employee.StartDate</td>
                                <td style="font-size: 15px;">
                                    <a type="button" class="btn btn-info" asp-area="" asp-action="update" asp-controller="home" asp-route-employeeId=@employee.Id>
                                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                <rect x="0" y="0" width="24" height="24" />
                                                <path d="M8,17.9148182 L8,5.96685884 C8,5.56391781 8.16211443,5.17792052 8.44982609,4.89581508 L10.965708,2.42895648 C11.5426798,1.86322723 12.4640974,1.85620921 13.0496196,2.41308426 L15.5337377,4.77566479 C15.8314604,5.0588212 16,5.45170806 16,5.86258077 L16,17.9148182 C16,18.7432453 15.3284271,19.4148182 14.5,19.4148182 L9.5,19.4148182 C8.67157288,19.4148182 8,18.7432453 8,17.9148182 Z" fill="#fff" fill-rule="nonzero" transform="translate(12.000000, 10.707409) rotate(-135.000000) translate(-12.000000, -10.707409) " />
                                                <rect fill="#fff" opacity="0.9" x="5" y="20" width="15" height="2" rx="1" />
                                            </g>
                                        </svg>
                                    </a>
                                    <a type="button" class="btn btn-danger" asp-area="" asp-action="delete" asp-controller="home" asp-route-employeeId=@employee.Id>
                                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                <rect x="0" y="0" width="24" height="24" />
                                                <path d="M6,8 L18,8 L17.106535,19.6150447 C17.04642,20.3965405 16.3947578,21 15.6109533,21 L8.38904671,21 C7.60524225,21 6.95358004,20.3965405 6.89346498,19.6150447 L6,8 Z M8,10 L8.45438229,14.0894406 L15.5517885,14.0339036 L16,10 L8,10 Z" fill="#fff" fill-rule="nonzero" />
                                                <path d="M14,4.5 L14,3.5 C14,3.22385763 13.7761424,3 13.5,3 L10.5,3 C10.2238576,3 10,3.22385763 10,3.5 L10,4.5 L5.5,4.5 C5.22385763,4.5 5,4.72385763 5,5 L5,5.5 C5,5.77614237 5.22385763,6 5.5,6 L18.5,6 C18.7761424,6 19,5.77614237 19,5.5 L19,5 C19,4.72385763 18.7761424,4.5 18.5,4.5 L14,4.5 Z" fill="#fff" opacity="0.9" />
                                            </g>
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        }
    }
</div>